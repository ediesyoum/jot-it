#banner
  .banner_content
    %h2 Sign up

    = simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = f.error_notification


      = f.input_field :email, :placeholder => "Email", required: false, autofocus: true
      = f.input_field :password, :placeholder => "Password", required: true, hint: ( "#{@minimum_password_length} characters minimum" if @minimum_password_length)
      = f.input_field :password_confirmation, :placeholder => "Password Confirmation", required: true

      <br>
      <br>

      = f.button :submit, "Sign Up"

      <br>
      <br>

    = render 'devise/shared/links'
