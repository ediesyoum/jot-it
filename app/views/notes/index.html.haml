.wrapper_with_padding
  #note.clearfix
    - unless @notes.blank?
      - @notes.each do |note|
        %a{href: (url_for [note])}
          .note
            %p.title= note.title
            %p.date= time_ago_in_words(note.created_at)
    - else
      %h2 Add a -# NOTE:
      %p It appears you haven't created any notes yet... create a new note below.
      %button= link_to "New Note", new_note_path
